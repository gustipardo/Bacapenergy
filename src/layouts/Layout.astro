    />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/bacapenergy-rectangle-chopped.jpeg" />
    <meta name="generator" content={Astro.generator} />


    <!-- Google tag (gtag.js) -->
